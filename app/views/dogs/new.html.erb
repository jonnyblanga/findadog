
<div class="form-page">
  <h1>New dog</h1>

  <%= simple_form_for @dog do |f| %>
    <%= f.input :name %>
    <%= f.input :gender, collection: ["male", "female"] %>
    <label>Birthday</label>
    <%= date_select :user, :birthday, :start_year => (Date.current.year - 90), :end_year => (Date.current.year)%>
    <%= f.input :size, collection: ["small", "medium", "large"] %>
    <%= f.input :breed, collection: @breed %>
    <%#= f.input :color, placeholder: "white, black, beige, gray, borwn, orange, golden" %>
    <%= f.input :color, :label => "Color", :collection => ["white", "black", "beige", "gray", "borwn", "orange", "golden"], :as => :check_boxes %>

    <%= f.input :is_hypoallergenic, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.input :is_sterilized, as: :boolean, checked_value: true, unchecked_value: false %>

    <%= f.button :submit, :id => 'btn-ghost' %>
  <% end %>
</div>
