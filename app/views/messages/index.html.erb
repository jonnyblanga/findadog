<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
      <th>To user</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.shelter.email %></td>
        <td><%= message.content %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

